Package: multiplexer-source
Architecture: all
Depends: ${misc:Depends},
      build-essential,
      automake,
      libboost-dev,
      libboost-date-time-dev,
      libboost-filesystem-dev,
      libboost-program-options-dev,
      libboost-signals-dev,
