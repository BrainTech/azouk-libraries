#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_configure:
	./bootstrap.sh
	mkdir -p debian/build
	cd debian/build && \
	   ../../configure --prefix=/usr RULES=../../debian/obci_configs/multiplexer.rules

override_dh_auto_build:
	make -C debian/build

override_dh_install:
	make -C debian/build install DESTDIR=$(PWD)/debian/tmp
	dh_install
	find debian/multiplexer-source -name .gitignore -print -delete , \
                                       -name '*~' -print -delete
	cd debian/multiplexer-openbci && chrpath --delete usr/bin/* usr/lib/*.so.* usr/lib/python*/dist-packages/azouk/_allinone.so
	find debian/multiplexer-openbci \( -name *.pyc -o -name *.pyo \) -delete
